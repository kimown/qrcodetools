{
  "manifest_version": 2,
  "name": "QR Code Tools",
  "description": "Generate a QR Code for the current page or your text",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": { 
    "16" : "icon16.png",
    "48" : "icon48.png",
    "128": "icon128.png"
   },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["popup.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "tabs"
  ]
}
